<h2>Reviews</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">_id</th>
            <th scope="col">MovieId</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Rating</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each reviews}}
            <tr id="admin-{{this._id}}">
                <th scope="row">{{this._id}}</th>
                <td><a href="../movies/{{this.movieId}}">{{this.movieId}}</a></td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td><button class="btn-link" type="button" id="deleteReview{{@index}}" onclick="deleteReview({{@index}});" review-id={{this._id}}>Delete</button>
                <td>
            </tr>
        {{/each}}
    </tbody>
</table>
